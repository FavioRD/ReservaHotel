@model IEnumerable<SistemaReserva.Models.Habitacion>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Habitaciones</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Listado de Habitaciones</h2>

        <a class="btn btn-primary mb-3" href="@Url.Action("Crear", "Habitacion")">Nueva Habitación</a>

        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdHabitacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Numero)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdHabitacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Habitacion", new { id = item.IdHabitacion })">Editar</a>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Habitacion", new { id = item.IdHabitacion })">Detalles</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Habitacion", new { id = item.IdHabitacion })">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (opcional para funcionalidades como modal) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
