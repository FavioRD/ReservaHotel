@{
    ViewBag.Title = "Inicio - Hotel Luxury Palace";
}

<!-- Hero Section -->
<section class="hero-section bg-dark text-white text-center py-5">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-4">Bienvenido a Luxury Palace</h1>
        <p class="lead mb-5">Experiencia, confort y elegancia en un solo lugar.</p>
        <a href="@Url.Action("Crear", "Reserva")" class="btn btn-primary btn-lg px-4 me-2">
            <i class="fas fa-calendar-alt me-1"></i> Reservar
        </a>
        <a href="@Url.Action("Index", "Habitacion")" class="btn btn-outline-light btn-lg px-4">
            Ver Habitaciones
        </a>
        <a href="@Url.Action("Index", "Huesped")" class="btn btn-outline-light btn-lg px-4">
            Lista de Huespedes
        </a>
    </div>
</section>

<!-- Habitaciones Destacadas -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Nuestras Habitaciones</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Individual</h5>
                        <p class="card-text">Perfecta para viajeros solitarios. Equipada con todas las comodidades.</p>
                        <p class="h4 text-primary">$50 <small class="text-muted">/noche</small></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Doble</h5>
                        <p class="card-text">Amplio espacio para dos personas. Vista panorámica incluida.</p>
                        <p class="h4 text-primary">$80 <small class="text-muted">/noche</small></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Suite</h5>
                        <p class="card-text">Lujo y exclusividad. Jacuzzi privado y servicio a la habitación.</p>
                        <p class="h4 text-primary">$120 <small class="text-muted">/noche</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="mb-4">¿Listo para vivir una experiencia única?</h2>
        <a href="@Url.Action("Crear", "Reserva")" class="btn btn-light btn-lg px-4">
            <i class="fas fa-concierge-bell me-2"></i> Reserva Ahora
        </a>
    </div>
</section>