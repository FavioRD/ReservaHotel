@model SistemaReserva.Models.Reserva

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Reserva</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Crear Reserva</h2>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card p-4 shadow-sm">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- Huesped -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.IdHuesped, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.IdHuesped, (SelectList)ViewBag.Huespedes, "-- Seleccione --", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.IdHuesped, "", new { @class = "text-danger" })
                </div>

                <!-- Habitacion -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.IdHabitacion, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.IdHabitacion, (SelectList)ViewBag.Habitaciones, "-- Seleccione --", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.IdHabitacion, "", new { @class = "text-danger" })
                </div>

                <!-- Fecha Entrada -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.FechaEntrada, new { @class = "form-label" })
                    @Html.EditorFor(model => model.FechaEntrada, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaEntrada, "", new { @class = "text-danger" })
                </div>

                <!-- Fecha Salida -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.FechaSalida, new { @class = "form-label" })
                    @Html.EditorFor(model => model.FechaSalida, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaSalida, "", new { @class = "text-danger" })
                </div>

                <!-- Estado -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Estado, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.Estado, (SelectList)ViewBag.Estados, "-- Seleccione --", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Guardar Reserva" class="btn btn-success" />
                    <a href="@Url.Action("Index", "Reserva")" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
